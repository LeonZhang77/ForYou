@model DataCenterOperation.Site.ViewModels.FailureDetailsViewModel

@{
    ViewData["Title"] = "删除故障信息记录";
}

<h3>@ViewData["Title"]</h3>
<hr />

<div>
    <h4>确定要删除下面这条信息吗？ 删除后将不能恢复。</h4>
    @await Html.PartialAsync("_Failure", Model)
</div>


<form asp-action="Delete">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" title="确定要删除吗？ 删除后将不能恢复。">删除</button> |
        <a asp-action="Index">返回故障信息统计表</a>
    </div>
</form>

